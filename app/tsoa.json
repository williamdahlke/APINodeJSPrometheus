{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "outputDirectory": "src/docs",
    "specVersion": 3,  
    "basePath": "/",
    "host": "localhost:3031",  
    "schemes": ["http"],  
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "name": "Authorization",
        "scheme": "bearer"
      }
    },
    "tags": [
      {
        "name": "Metrics",
        "description": "Operations to get and set metrics"
      }
    ]
  }
}
